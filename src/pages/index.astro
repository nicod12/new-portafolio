---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import MainSection from '../sections/MainSection.astro';

import About from '../sections/About.astro';
import Footer from '../sections/Footer.astro';
import Card from '../components/Card.astro';
---

<Layout title="Nicolas Dume Fullstack">
	<Navbar />
	<MainSection />
	<Card />
	<About />
	<Footer />

</Layout>


<script>
		const goToProjects = document.getElementById("goToProjects");
		goToProjects?.addEventListener("click",(e) => {
			e.preventDefault();

			const projectSection = document.getElementById("projects");

			projectSection?.scrollIntoView({ behavior: 'smooth' })
		});

		const goToAbout = document.getElementById("goToAbout");
		goToAbout?.addEventListener("click", (e) => {
			e.preventDefault();
			
			const aboutSection = document.getElementById("about");

			aboutSection?.scrollIntoView({ behavior: 'smooth' });
		})
</script>